{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths":{
      "@/*": ["src/*"],
      "path" : [
        "./node_modules/@types/node"
      ],
      "fs" : [
        "./node_modules/@types/node"
      ],
      "node:*" : [
        "./node_modules/@types/node/*"
      ],
      "@Picutre/*" : [
        "src/assets/Picutre/*"
      ],
      "@CSS/*" : [
        "src/assets/CSS/*"
      ],
      "@Components/*":[
        "src/components/*"
      ]
    },
    "types":["vite/client", "./vite-env.d.ts", "@types/node", "path-browserify",]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
